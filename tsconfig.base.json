{
  "compileOnSave": false,
  "compilerOptions": {
    "esModuleInterop": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@manga-reader/models": ["libs/models/src/index.ts"],
      "@manga-reader/dtos": ["libs/dtos/src/index.ts"],
      "@manga-reader/components": ["libs/components/src/index.ts"],
      "@manga-reader/react-context": ["libs/react-context/src/index.ts"],
      "@manga-reader/props": ["libs/props/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
